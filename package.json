{
  "name": "html5up-paradigm-shift",
  "version": "1.0.0",
  "description": "HTML5 UP Paradigm Shift template with tests",
  "scripts": {
    "lint": "npm run lint:html && npm run lint:css && npm run lint:js",
    "lint:html": "htmlhint '*.html'",
    "lint:css": "stylelint 'assets/css/**/*.css' 'assets/sass/**/*.scss' --fix",
    "lint:js": "eslint 'assets/js/**/*.js' --fix",
    "test": "jest"
  },
  "devDependencies": {
    "htmlhint": "^1.1.4",
    "stylelint": "^16.0.0",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-config-standard-scss": "^13.0.0",
    "eslint": "^9.0.0",
    "@eslint/js": "^9.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  }
}